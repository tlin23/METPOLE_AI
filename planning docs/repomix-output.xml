def save_json(data: Dict[str, Any], filepath: str) -> bool:
    """
    Save data to a JSON file.

    Args:
        data (Dict[str, Any]): Data to save.
        filepath (str): Path to save the file.

    Returns:
        bool: True if successful, False otherwise.
    """
